<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/typ_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/typ_textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Create a Type :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:layout_margin="5dp"
		    android:orientation="horizontal">
        <EditText
            android:id="@+id/typ_editText2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight="1.5"
            
            android:hint="eg. prac, lec"
            android:inputType="text" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/typ_duration"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:text="01:00 hrs" />

		</LinearLayout>
        <LinearLayout
            android:id="@+id/typ_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >
           
        </LinearLayout>

        <Button
            android:id="@+id/typ_button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background_selector"
            android:text="Add" />

    </LinearLayout>

</LinearLayout>
