<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="#11bbaa" >

    <TextView
        android:id="@+id/menu_item_header_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="BE CMPN B"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffffa" />

    <TextView
        android:id="@+id/menu_item_header_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/menu_item_header_textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="65%"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fffffa" />

</RelativeLayout>
