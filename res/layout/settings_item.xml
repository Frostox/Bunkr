<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
	android:padding="3dp">

    <TextView
        android:id="@+id/settings_item_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/settings_item_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/settings_item_textView1"
        android:layout_toLeftOf="@+id/settings_item_ll1"
        android:text="Additional Info"
        android:layout_marginRight="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout 
        android:id="@+id/settings_item_ll1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:minWidth="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/settings_item_textView1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/settings_item_textView3s"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Choice"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <CheckBox
            android:id="@+id/settings_item_checkBox1s"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="" />

    </LinearLayout>

</RelativeLayout>
